<%= form_for(task) do |f| %>
<% if task.errors.any? %>
  <div id="errors_explanation">
    <ul>
      <% task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= f.label :content, 'Task' %>
<%= f.text_field :content %>
<%= f.label :status, 'Status' %>
<%= f.select(:status, [['New', 'New'], ['WIP', 'WIP'],['Done','WIP'],['Pending','Pending']]) %>
<%= f.submit 'Create' %>
<% end %>